{
"title": "; + escape to tilde",
  "rules": [
    {
      "description": "; + escape to tilde",
      "manipulators": [
        {
            "from": {
                "key_code": "semicolon"
            },
            "to": [
                {
                    "set_variable": {
                        "name": "semicolon_modifier",
                        "value": 1
                    }
                }
            ],
            "to_after_key_up": [
                {
                    "set_variable": {
                        "name": "semicolon_modifier",
                        "value": 0
                    }
                }
            ],
            "to_if_alone": [
              {
                "key_code": "semicolon"
              }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "type": "variable_if",
                    "name": "semicolon_modifier",
                    "value": 1
                }
            ],
            "from": {
                "key_code": "escape"
            },
            "to": {
                "key_code": "grave_accent_and_tilde"
              },
            "type": "basic"
        }
      ]
    }
  ]
}